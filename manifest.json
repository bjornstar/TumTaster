{
  "name": "ChromeTaster",
  "version": "0.3.1",
  "description": "A Chrome extension that keeps track of the MP3s you see and queues them up for playback. (Currently only works on Tumblr)",
  "browser_action": {
    "default_icon": "tumblr-audio-icon-16.png",
    "default_title": "ChromeTaster",
    "popup": "popup.html"
  },
  "icons": { 
    "16": "tumblr-audio-icon-16.png",
    "32": "tumblr-audio-icon-32.png",
    "48": "tumblr-audio-icon-48.png",
    "64": "tumblr-audio-icon-64.png"
  },
  "background_page": "background.html",
  "options_page"	: "options.html",
  "content_scripts": [ {
    "js": [ "script.js" ],
    "matches": [ "http://*/*", "https://*/*" ],
    "include_globs": [ "http://*.tumblr.com/*", "http://bjornstar.com/*", "http://toys.tumblrist.com/audio/*" ]
  } ]
}